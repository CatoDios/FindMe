<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ayuda_2"
            android:layout_width="380dp"
            android:layout_height="420dp" />
    </LinearLayout>



    <RelativeLayout

        android:background="@color/error_red"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <ImageView
            android:id="@+id/btn_adelante"
            android:padding="10dp"
            android:tint="@color/white"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_arrow_forward_ios_white_18dp"
            />
        <ImageView
            android:id="@+id/boton_atras"
            android:padding="10dp"
            android:tint="@color/white"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_arrow_back_ios_white_18dp"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paso 2"/>
            <TextView
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecciona el tipo de comida deseado"/>
            <TextView
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Almuerzo o cena"/>
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>