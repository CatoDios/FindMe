<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/root"
    android:gravity="center"
    android:padding="30dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/cuerpo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                app:cardCornerRadius="5dp"
                android:elevation="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
                android:layout_height="400dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/fondos"
                    android:scaleType="centerCrop"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/gradiente"
                    android:scaleType="centerCrop"
                    />

                <LinearLayout
                    android:paddingTop="15dp"
                    android:layout_margin="15dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <TextView
                            android:id="@+id/nombre"
                            android:textStyle="bold"
                            android:textSize="27sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MARTES"
                            android:textColor="@color/white"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <LinearLayout

                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:text="Comida"
                                android:layout_width="match_parent"
                                android:layout_height="30dp" />
                            <TextView

                                android:id="@+id/comida"
                                android:layout_marginLeft="15dp"
                                android:textSize="17sp"
                                android:textColor="@color/white"
                                android:text="Arroz Chaufa"
                                android:layout_width="match_parent"
                                android:layout_height="23dp" />


                        </LinearLayout>


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <LinearLayout

                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:text="TURNO"
                                android:layout_width="match_parent"
                                android:layout_height="30dp" />
                            <TextView
                                android:id="@+id/turno"
                                android:layout_marginLeft="15dp"
                                android:textSize="17sp"
                                android:textColor="@color/white"
                                android:text="Tallarin verde"
                                android:layout_width="match_parent"
                                android:layout_height="23dp" />



                        </LinearLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <LinearLayout

                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:text="NIVEL"
                                android:layout_width="match_parent"
                                android:layout_height="30dp" />
                            <TextView
                                android:id="@+id/nivel"
                                android:layout_marginLeft="15dp"
                                android:textSize="17sp"
                                android:textColor="@color/white"
                                android:text="Arroz Chaufa"
                                android:layout_width="match_parent"
                                android:layout_height="23dp" />


                        </LinearLayout>


                    </RelativeLayout>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <LinearLayout

                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:text="HORA INICIO"
                                android:layout_width="match_parent"
                                android:layout_height="30dp" />
                            <TextView
                                android:id="@+id/hora_inicio"
                                android:layout_marginLeft="15dp"
                                android:textSize="17sp"
                                android:textColor="@color/white"
                                android:text="Arroz Chaufa"
                                android:layout_width="match_parent"
                                android:layout_height="23dp" />


                        </LinearLayout>



                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <LinearLayout

                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:text="HORA FIN"
                                android:layout_width="match_parent"
                                android:layout_height="30dp" />
                            <TextView
                                android:id="@+id/hora_fin"
                                android:layout_marginLeft="15dp"
                                android:textSize="17sp"
                                android:textColor="@color/white"
                                android:text="Arroz Chaufa"
                                android:layout_width="match_parent"
                                android:layout_height="23dp" />


                        </LinearLayout>



                    </RelativeLayout>
                </LinearLayout>



            </android.support.v7.widget.CardView>






        </LinearLayout>




        <Button
            android:id="@+id/cancelar"
            android:layout_marginTop="408dp"
            android:layout_width="match_parent"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_height="60dp"
            android:background="@drawable/boton_login"
            android:backgroundTint="@color/error_red"
            android:text="CANCELAR"
            android:textColor="@color/white"
            />

    </RelativeLayout>




</RelativeLayout>