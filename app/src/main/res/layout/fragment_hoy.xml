<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/root"
    android:layout_marginBottom="70dp"
    android:orientation="vertical"
    android:paddingTop="35dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/cuerpo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            app:cardCornerRadius="5dp"
            android:elevation="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
            android:layout_height="370dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/fondos"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/gradiente"
                android:scaleType="centerCrop"
                />

            <LinearLayout
                android:paddingTop="15dp"
                android:layout_margin="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:textStyle="bold"
                        android:textSize="27sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MARTES"
                        android:textColor="@color/white"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <LinearLayout

                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:text="DESAYUNO"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />
                        <TextView
                            android:lines="3"
                            android:id="@+id/desayuno"
                            android:layout_marginLeft="15dp"
                            android:textSize="17sp"
                            android:textColor="@color/white"
                            android:text="Arroz Chaufa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                    </LinearLayout>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <LinearLayout

                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:text="ALMUERZO"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />
                        <TextView
                            android:lines="3"

                            android:id="@+id/almuerzo"
                            android:layout_marginLeft="15dp"
                            android:textSize="17sp"
                            android:textColor="@color/white"
                            android:text="Tallarin verde"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />



                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <LinearLayout

                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:text="CENA"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />
                        <TextView
                            android:lines="3"

                            android:id="@+id/cena"
                            android:layout_marginLeft="15dp"
                            android:textSize="17sp"
                            android:textColor="@color/white"
                            android:text="Arroz Chaufa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                    </LinearLayout>


                </RelativeLayout>
            </LinearLayout>



        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/reservar"
            android:layout_marginTop="380dp"
            android:layout_width="match_parent"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_height="60dp"
            android:background="@drawable/boton_login"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Reservar"
            android:textColor="@color/white"
            />

    </RelativeLayout>


    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/error"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:elevation="7dp"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:tint="@color/black"
                    android:elevation="4dp"

                    android:src="@drawable/ic_baseline_cloud_off_24px"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
            </RelativeLayout>
            <TextView
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No se pudo traer los datos"/>
        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>