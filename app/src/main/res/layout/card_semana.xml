<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView

    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    android:layout_margin="30dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/img_comida"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/semana1"

        />
    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/gradiente"

        />

    <LinearLayout
        android:paddingTop="15dp"
        android:layout_margin="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_dia"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LUNES"
                android:textColor="@color/white"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="100dp">
            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tipo"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="ALMUERZO"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <TextView
                    android:id="@+id/tv_alm_2"
                    android:layout_marginLeft="5dp"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:text="Sopa de carne"
                    android:layout_width="match_parent"
                    android:layout_height="23dp" />
                <TextView
                    android:id="@+id/tv_alm_3"
                    android:layout_marginLeft="5dp"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:text="Manzana"
                    android:layout_width="match_parent"
                    android:layout_height="23dp" />
                <TextView
                    android:id="@+id/tv_alm_1"
                    android:layout_marginLeft="5dp"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:text="Tallarin verde"
                    android:layout_width="match_parent"
                    android:layout_height="23dp" />


            </LinearLayout>


        </RelativeLayout>





        
    </LinearLayout>



</android.support.v7.widget.CardView>